{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName-Primary": { "type": "string" },
    "siteName-Secondary": { "type": "string" },
    "hostingPlan-Primary": { "type": "string" },
    "hostingPlan-Secondary": { "type": "string" },
        "sku": { "type": "string",
                 "allowedValues": [ "F1", "D1", "B1", "B2", "B3", "S1", "S2", "S3", "P1", "P2", "P3", "P4" ]
               },
    "repoURL": { "type": "string" },
    "branch": { "type": "string" },
    "administratorLogin": { "type": "string" },
    "administratorLoginPassword": { "type": "string" },
    "collation": { "type": "string" },
    "databaseName": { "type": "string" },
    "edition": { "type": "string" },
    "requestedServiceObjectiveName": { "type": "string" },
    "location": { "type": "string" },
    "replicalocation": { "type": "string" },
    "serverName": { "type": "string" },
    "serverReplicaName": { "type": "string" },
    "version": { "type": "string" }
  },
  "resources": [{
      "apiVersion": "2015-01-01",
      "name": "webAppPrimary",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/4c74356b41/bbbb-is-the-word/master/ARM/webapp-git.json",
          "contentVersion": "1.0.0.0"
        },
      "parameters": { 
        "siteName": {
          "value": "[parameters('siteName-Primary')]"
          },
        "hostingPlanName": {
          "value": "[parameters('hostingPlan-Primary')]"
          },
        "sku": {
          "value": "[parameters('sku')]"
          },
        "repoUrl": {
          "value": "[parameters('repoUrl')]"
          },
        "branch": {
          "value": "[parameters('branch')]"
          },
        "location": {
          "value": "[parameters('location')]"
         }
        } 
      }
    },
        {
      "apiVersion": "2015-01-01",
      "name": "webAppSecondary",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/4c74356b41/bbbb-is-the-word/master/ARM/webapp-git.json",
          "contentVersion": "1.0.0.0"
        },
      "parameters": { 
        "siteName": {
          "value": "[parameters('siteName-Secondary')]"
          },
        "hostingPlanName": {
          "value": "[parameters('hostingPlan-Secondary')]"
          },
        "sku": {
          "value": "[parameters('sku')]"
          },
        "repoUrl": {
          "value": "[parameters('repoUrl')]"
          },
        "branch": {
          "value": "[parameters('branch')]"
          },
        "location": {
          "value": "[parameters('replicalocation')]"
         }
        } 
      }
    },
        {
      "apiVersion": "2015-01-01",
      "name": "sqlDatabaseGeoReplicated",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/4c74356b41/bbbb-is-the-word/master/ARM/sql-replica.json",
          "contentVersion": "1.0.0.0"
        },
      "parameters": {
        "administratorLogin": {
            "value": "[parameters('replicalocation')]"
         },
        "administratorLoginPassword": {
            "value": "[parameters('replicalocation')]"
          },
        "collation": {
            "value": "[parameters('replicalocation')]"
         },
        "databaseName": {
            "value": "[parameters('replicalocation')]"
         },
        "edition": {
            "value": "[parameters('replicalocation')]"
         },
        "requestedServiceObjectiveName": {
            "value": "[parameters('replicalocation')]"
         },
        "location": {
            "value": "[parameters('replicalocation')]"
         },
        "replicalocation": {
            "value": "[parameters('replicalocation')]"
         },
        "serverName": {
            "value": "[parameters('replicalocation')]"
         },
        "serverReplicaName": {
            "value": "[parameters('replicalocation')]"
          },
        "version": {
            "value": "[parameters('replicalocation')]"
          }
        } 
      }
    }
  ],
  "outputs": {
    "webAppPrimary": {
      "type": "object",
      "value": "[reference('webAppPrimary').outputs.result]"
    },
    "webAppSecondary": {
      "type": "object",
      "value": "[reference('webAppSecondary').outputs.result]"
    },
    "sqlDatabaseGeoReplicated": {
      "type": "object",
      "value": "[reference('sqlDatabaseGeoReplicated').outputs.result]"
    }
  }
}


